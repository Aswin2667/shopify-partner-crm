pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Aswin2667/shopify-partner-crm.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t shopcrm-tracker -f apps/tracker/Dockerfile .'
                }
            }
        }

        stage('Deploy to Heroku') {
            environment {
                HEROKU_APP_NAME = 'shopcrm-tracker'  
                HEROKU_API_KEY = credentials('heroku')  
            }
            steps {
                script {
                    // Log in to Heroku Container Registry
                    sh 'echo $HEROKU_API_KEY | docker login --username=_ --password-stdin registry.heroku.com'
                    
                    // Tag the Docker image for Heroku
                    sh 'docker tag shopcrm-tracker registry.heroku.com/$HEROKU_APP_NAME/web'

                    // Push the Docker image to Heroku Container Registry
                    sh 'docker push registry.heroku.com/$HEROKU_APP_NAME/web'

                    // Release the pushed image
                    sh 'heroku container:release web --app $HEROKU_APP_NAME'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Deployment to Heroku was successful!'
        }
        failure {
            echo 'Deployment to Heroku failed.'
        }
    }
}
